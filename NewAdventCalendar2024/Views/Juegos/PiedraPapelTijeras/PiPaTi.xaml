<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewAdventCalendar2024.Views.Juegos.PiedraPapelTijeras.PiPaTiPage"
             NavigationPage.HasNavigationBar="False"
             NavigationPage.HasBackButton="False">

    <VerticalStackLayout Spacing="20" Padding="30" HorizontalOptions="Center">

        <!-- Título del Juego -->
        <Label x:Name="titleLabel"
               Text="Piedra, Papel o Tijeras"
               FontSize="32"
               TextColor="#0AA7EA"
               HorizontalTextAlignment="Center"
               FontFamily="HomeXmas"
               VerticalOptions="Start" />

        <!-- Visualización de la Elección de la Máquina -->
        <Label Text="Eleccion de la Maquina:" FontSize="18" HorizontalOptions="Center" FontFamily="Candy"/>
        <Image x:Name="MachineChoiceImage" WidthRequest="100" HeightRequest="100" HorizontalOptions="Center" />
        <Label x:Name="MachineChoiceLabel" FontSize="19" Text="" HorizontalOptions="Center" FontFamily="Candy"/>

        <!-- Resultado de la Ronda -->
        <Label x:Name="RoundResultLabel" Text="Elige tu jugada" FontSize="24" HorizontalOptions="Center" VerticalOptions="Center" FontFamily="HomeXmas"/>

        <!-- Marcador -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20">
            <Label x:Name="PlayerScoreLabel" Text="0" FontSize="24" TextColor="Cyan" HorizontalOptions="Center" FontFamily="HomeXmas"/>
            <Label x:Name="ScoreLabel" Text="VS" FontSize="24" TextColor="#FFFFFF" HorizontalOptions="Center" FontFamily="HomeXmas"/>
            <Label x:Name="MachineScoreLabel" Text="0" FontSize="24" TextColor="Red" HorizontalOptions="Center" FontFamily="HomeXmas"/>
        </StackLayout>
        <Label x:Name="GameStatusLabel" Text="" FontSize="24" HorizontalOptions="Center" FontFamily="HomeXmas"/>

        <!-- Botones de Piedra, Papel y Tijeras con Imágenes -->
        <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="End" Spacing="10">
            <!-- Espaciado entre los botones -->
            <StackLayout HorizontalOptions="Center">
                <Button x:Name="ButtonPiedra" Clicked="OnPlayerChoice" CommandParameter="Piedra" BackgroundColor="Transparent">
                    <Button.ImageSource>
                        <FileImageSource File="piedra.png" />
                    </Button.ImageSource>
                </Button>
                <Label Text="Piedra" HorizontalOptions="Center" FontFamily="Candy" FontSize="19"/>
            </StackLayout>
            <StackLayout HorizontalOptions="Center">
                <Button x:Name="ButtonPapel" Clicked="OnPlayerChoice" CommandParameter="Papel" BackgroundColor="Transparent" >
                    <Button.ImageSource>
                        <FileImageSource File="papel.png" />
                    </Button.ImageSource>
                </Button>
                <Label Text="Papel" HorizontalOptions="Center" FontFamily="Candy" FontSize="19"/>
            </StackLayout>
            <StackLayout HorizontalOptions="Center">
                <Button x:Name="ButtonTijeras" Clicked="OnPlayerChoice" CommandParameter="Tijeras" BackgroundColor="Transparent">
                    <Button.ImageSource>
                        <FileImageSource File="tijeras.png" />
                    </Button.ImageSource>
                </Button>
                <Label Text="Tijeras" HorizontalOptions="Center" FontFamily="Candy" FontSize="19"/>
            </StackLayout>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>
